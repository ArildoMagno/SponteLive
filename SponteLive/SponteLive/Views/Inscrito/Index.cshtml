@model IEnumerable<SponteLive.Models.Inscrito>

<hr />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciar Inscritos</h3>
                </div>

                <div class="box-body">
                    <p>
                        <a href="Inscrito/Create" class="btn btn-primary">Criar</a>
                    </p>




                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataNascimento)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataNascimento)
                                    </td>

                                    <td>
                                        <a href="Inscrito/Details/@item.Id"> <i class="fa fa-eye fa-lg" aria-hidden="true"></i> </a> &nbsp;
                                        <a href="Inscrito/Edit/@item.Id">&nbsp;&nbsp; <i class="fa fa-pencil fa-lg" aria-hidden="true"></i> &nbsp; </a>
                                        <a href="Inscrito/Delete/@item.Id">&nbsp;&nbsp; <i class="fa fa-trash fa-lg" aria-hidden="true"></i> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>




                </div>

            </div>

        </div>

    </div>

</section>
