@model SponteLive.Models.Instrutor

@{
    ViewData["Title"] = "Edit";
}

<hr />



<section class="content-header">
    <h1>
        Editar
    </h1>
</section>

<section class="content container-fluid">

    <div class="box box-info">


        <form asp-action="Edit" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="box-body">



                <div class="form-group">
                    <label for="Nome" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input asp-for="Nome" type="text" class="form-control" name="Nome" placeholder="João" />
                    </div>
                </div>



                <div class="form-group">
                    <label for="DataNascimento" class="col-sm-2 control-label">Data Nascimento</label>
                    <div class="col-sm-10">
                        <input asp-for="DataNascimento" type="date" class="form-control" name="DataNascimento" />
                    </div>
                </div>



                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input asp-for="Email" type="email" class="form-control" name="Email" placeholder="joaoj@gmail.com" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="InstagramUrl" class="col-sm-2 control-label">Instagram</label>
                    <div class="col-sm-10">
                        <input asp-for="InstagramUrl" type="text" class="form-control" name="InstagramUrl" placeholder="instagram.com/joao" />
                    </div>
                </div>

            </div>




            <div class="box-footer">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <button type="submit" class="btn btn-info pull-right">Salvar</button>
            </div>


        </form>
    </div>

</section>
