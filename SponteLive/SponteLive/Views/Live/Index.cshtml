@model IEnumerable<SponteLive.Models.Live>



@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciar Lives</h3>
                </div>

                <div class="box-body">
                    <p>
                        <a href="Live/Create" class="btn btn-primary">Criar</a>
                    </p>

                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataHoraInicio)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataHoraInicio)
                                    </td>
                                    <td>
                                        <a href="Live/Details/@item.Id"> <i class="fa fa-eye fa-lg" aria-hidden="true"></i> </a> &nbsp;
                                        <a href="Live/Edit/@item.Id">&nbsp;&nbsp; <i class="fa fa-pencil fa-lg" aria-hidden="true"></i> &nbsp; </a>
                                        <a href="Live/Delete/@item.Id">&nbsp;&nbsp; <i class="fa fa-trash fa-lg" aria-hidden="true"></i> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    </div>

</section>


